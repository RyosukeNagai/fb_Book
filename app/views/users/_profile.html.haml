%table.table
  %tr= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "no-image", fallback: "no_image.jpg"
  %tr
    %th name
    %th= user.name
  %tr
    %th introduction
    %th= user.introduction
.row
  - if @user.id == current_user.id
    = link_to '',edit_user_path(id:user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench btn btn-default"

