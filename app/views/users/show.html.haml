.container
  .row
    .col-xs-3
      %h2 User info
      = render 'users/profile', user: @user
      / 同コントローラーのviewで表示ならusersは省略可
      %h2 New book
      = render 'books/new', book: @book
    .col-xs-9
      %h2 Books
      %table.table.table-hover.table-inverse
        %thead
          %tr
            %th
            %th Title
            %th Opinion
            %th{:colspan => "3"}
        %tbody
          - @books.each do |book|
            %tr
              %td
                = link_to (book.user) do
                  = attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg")
              %td= link_to book.title,book, class: "book_#{book.id}"
              %td= book.body
