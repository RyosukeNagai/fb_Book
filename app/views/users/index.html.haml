.container
  .row
    .col-xs-3
      %h2 User info
      = render 'users/profile', user: current_user
      / メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない
      %h2 New book
      = render 'books/new', book: @book
    .col-xs-9
      %h2 Users
      / users一覧
      %table.table
        %thead
          %tr
            %th image
            %th name
            %th{:colspan => "3"}
        %tbody
          - @users.each do |user|
            %tr
              %td= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size:'50x50')
              %td= user.name
              %td= link_to "Show", user, class: "user_#{user.id}"
